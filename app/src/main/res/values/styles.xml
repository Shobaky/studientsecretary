<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:progressBarStyleHorizontal">@style/progressBar</item>
    </style>

    <style name="AppTheme2" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/primaryDark2</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:colorBackground">@color/colorAccent</item>
        <item name="android:progressBarStyleHorizontal">@style/progressBar</item>
    </style>
    <style name="studyActivityTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorBackground">@color/primaryStudy</item>
        <item name="colorPrimaryDark">@color/primaryDarkStudy</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="settingTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:colorBackground">@color/primarySettings</item>
        <item name="colorAccent">#5CACEE</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="colorControlActivated">#5CACEE</item>
        <item name="colorPrimary">@color/primaryDarkSettings</item>
        <item name="alertDialogTheme">@style/prefDialog</item>
        <item name="colorPrimaryDark">@color/primaryDarkSettings</item>
        <item name="android:textColorSecondary">#1B4F72</item>
    </style>

    <style name="prefDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:background">#5CACEE</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>


    <style name="DialogHomework" parent="Theme.AppCompat.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>
    <style name="progressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:color">#ffffff</item>
        <item name="android:height">10dp</item>
    </style>
    <style name="finishStudyDialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/primaryDarkStudy</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="colorControlNormal">@color/primaryStudy</item>
    </style>

    


</resources>