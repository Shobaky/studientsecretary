<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/study_container">


    <GridView
        android:id="@+id/materialsGrid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/study_grid_margin_start"
        android:layout_marginLeft="@dimen/study_grid_margin_start"
        android:layout_marginTop="@dimen/study_grid_margin_top"
        android:layout_marginEnd="@dimen/study_grid_margin_end"
        android:layout_marginRight="@dimen/study_grid_margin_end"
        android:layout_marginBottom="@dimen/study_grid_margin_bottom"
        android:numColumns="auto_fit"
        android:gravity="center"
        android:verticalSpacing="@dimen/study_grid_vertical_spacing"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
   />
</android.support.constraint.ConstraintLayout>